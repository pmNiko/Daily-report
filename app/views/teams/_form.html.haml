.row
= simple_form_for @team do |f|
  .panel.panel-default
    .panel-heading
      %h3.panel-title.text-center Team
    .panel-body.text-center
      .form-inline
        .form-group
          = f.label :date
          = f.date_field :date, :title => "date", :value => Date.today,
          :placeholder => 'dd/mm/yyyy',
          :class => "form-control-datepicker"
        .form-group
          = f.association :users, as: :select,
                            value_method: :id, label_method: :email,
                            multiple: true, input_html: { class: 'chosen-select',
                            max_selected_options: 2}
        .form-group
          = f.input :truck, class: 'form-control currency'
  .panel.panel-default
    .panel-heading
      %h3.panel-title.text-center Claims
    .panel-body
      .col-sm-12.text-center#claims
        = f.simple_fields_for :claims do | form_builder |
          = render "claim_fields", :f => form_builder
      .btn.btn-success.btn-sm
        = link_to_add_association '', f, :claims, class: 'glyphicon glyphicon-plus'
  %br
  %button.text-center
    = f.button :submit, :class => 'btn btn-primary'
