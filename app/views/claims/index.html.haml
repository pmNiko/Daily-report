%div.col-sm-3
%div.col-sm-7.control-group
  %div.container.col-sm-12
    %h2.text-center CLAIMS
    %table.table.table-striped
      %tbody.text-center
        %th.text-center.col-sm-12{:class => ("glyphicon glyphicon-road")} Truck
        %th.text-center.col-sm-12{:class => ("glyphicon glyphicon-paperclip")} Ticket
        %th.text-center.col-sm-12{:class => ("glyphicon glyphicon-phone")} Client
        %th.text-center.col-sm-12{:class => ("glyphicon glyphicon-user")} Responsible
        %th.text-center.col-sm-12{:class => ("glyphicon glyphicon-user")} Responsible
        %th.text-center.col-sm-12{:class => ("glyphicon glyphicon-eye-open")} Show
        %th.text-center.col-sm-12{:class => ("glyphicon glyphicon-pencil")} Modify
        %th.text-center.col-sm-12{:class => ("glyphicon glyphicon-trash")} Destroy
      %tbody.text-center
        - @claims.each do |claim|
          %tr
            %td= claim.truck
            %td= claim.ticket
            %td= claim.client
            - if claim.only_one_responsible?
              %td= claim.responsible_first.email
              %td " - "
              %td
                = link_to claim_path(claim), class: 'btn btn-info btn-xs' do
                  = content_tag(:span, '', class: 'glyphicon glyphicon-eye-open')
              %td
                = link_to edit_claim_path(claim), class: 'btn btn-warning btn-xs' do
                  = content_tag(:span, '', class: 'glyphicon glyphicon-edit')
              %td
                = link_to claim_path(claim), class: 'btn btn-danger btn-xs', |
                  method: :delete, data: {confirm: 'Estas segur@?'} do       |
                  = content_tag(:span, '', class: 'glyphicon glyphicon-trash')
            - else
              %td
                = claim.responsible_first.email
              %td
                = claim.responsible_second.email
              %td
                = link_to claim_path(claim), class: 'btn btn-info btn-xs' do
                  = content_tag(:span, '', class: 'glyphicon glyphicon-eye-open')
              %td
                = link_to edit_claim_path(claim), class: 'btn btn-warning btn-xs' do
                  = content_tag(:span, '', class: 'glyphicon glyphicon-edit')
              %td
                = link_to claim_path(claim), class: 'btn btn-danger btn-xs', |
                  method: :delete, data: {confirm: 'Estas segur@?'} do       |
                  = content_tag(:span, '', class: 'glyphicon glyphicon-trash')
