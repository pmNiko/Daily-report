%p#notice
  = notice
%div.col-sm-3
%div.col-sm-5
  %p
    %strong Ticket:
    = @claim.ticket

  %p
    %strong Client:
    = @claim.client
  - if @claim.only_one_responsible?
    %td= @claim.responsible_first.email
    %td 
  - else
    %td
      = @claim.responsible_first.email
    %td
      = @claim.responsible_second.email

  = link_to 'Edit', edit_claim_path(@claim)
  = link_to 'Back', claims_path
