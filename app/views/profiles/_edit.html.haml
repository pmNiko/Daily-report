#product-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title= title
      = form_for @profile, remote: true do |f|

        .modal-body

          .form-group
            = f.label :first_name
            = f.text_field :first_name, class: 'form-control'
          .form-group
            = f.label :last_name
            = f.text_field :last_name, class: 'form-control'
          .form-group
            = f.label :date_of_birth
            = f.date_field :date_of_birth, class: 'form-control'
          .panel.panel-default
            .panel-heading
              %h3.panel-title Phones
            .panel-body
              #phones
                = f.fields_for :phones do | phone |
                  = render "phone_fields", :f => phone
              %button_tag#but_tag_plus
                = link_to_add_association button_tag('', type: "button", class: "glyphicon glyphicon-plus"), f, :phones

        .modal-footer
          = f.submit class: "btn btn-primary btn-lg btn-block"

