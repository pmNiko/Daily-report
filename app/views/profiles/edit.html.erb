<%= form_for @profile do |f| %>
 <div class="form-group">
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: 'form-control' %>
 </div>
 <div class="form-group">
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'form-control' %>
 </div>
 <div class="form-group">
  <%= f.label :date_of_birth %>
  <%= f.date_field :date_of_birth, class: 'form-control' %>
 </div>
 <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Phones</h3>
    </div>
    <div class="panel-body">
      <div id='phones'>
        <%= f.simple_fields_for :phones do | form_builder | %>
          <%= render "phone_fields", :f => form_builder %>
        <% end %>
      </div>
      <div class='btn btn-success btn-sm'>
        <%= link_to_add_association '', f, :phones, class: 'glyphicon glyphicon-plus'  %>
      </div>
    </div>
  </div>

  <p>
    <%= f.submit 'Update', :class => 'btn btn-primary' %>
  </p>
<% end %>
